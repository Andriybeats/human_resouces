<h1>Employess </h1>
<h2>
  <%= link_to "Home", root_path %>
</h2>
<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.id %></td>
    <td><%= employee.name %></td>
    <td><%= employee.surname %></td>
    <td><%= employee.date_birthday %></td>
    <td><%= employee.city_birthday %></td>
    <td><%= employee.address %></td>
    <td><%= employee.department %></td>
    <td><%= employee.start_work %></td>
    <td><%= employee.position %></td>
    <td><%= link_to 'Show', employee_path(employee) %></td>
    <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
    <td><%= link_to 'Destroy', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }%></td>
  </tr>
  <hr>
<% end %>
